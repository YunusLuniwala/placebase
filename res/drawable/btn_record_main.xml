<?xml version="1.0" encoding="utf-8"?>
 <!-- 
* Custom Button Background
* 
* Main Btn: Record Media 
* pressed, focused, and default states
* 
* @tutorial
* http://developerlife.com/tutorials/?p=1239
 -->
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/ic_action_record_main_pressed">
     </item>
    <item android:state_focused="true"
          android:drawable="@drawable/ic_action_record_main_focused">
    </item>
    <item android:drawable="@drawable/ic_action_record_main_default" />
</selector>