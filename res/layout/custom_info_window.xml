<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/markerbubble"
    android:orientation="horizontal"
    android:paddingBottom="30dp" >

    <ImageView
        android:id="@+id/ic_perspective"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/background_light"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgimage_launcher" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/journey_perspective"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/btn_record_bg_true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_record_audio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:singleLine="true"
                android:textColor="@android:color/background_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/begin_journey"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/cont_senses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/ic_sense_hear"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_sense_bg_true"
                        android:src="@drawable/ic_sense_hear" />

                    <ImageView
                        android:id="@+id/ic_sense_see"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_sense_bg_true"
                        android:src="@drawable/ic_sense_see" />

                    <ImageView
                        android:id="@+id/ic_sense_smell"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_sense_bg_true"
                        android:src="@drawable/ic_sense_smell" />

                    <ImageView
                        android:id="@+id/ic_sense_taste"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_sense_bg_true"
                        android:src="@drawable/ic_sense_taste" />

                    <ImageView
                        android:id="@+id/ic_sense_touch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_sense_bg_true"
                        android:src="@drawable/ic_sense_touch" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
