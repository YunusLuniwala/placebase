<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/geo_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="right"
        android:padding="2dp"
        android:text="(45.000456, -84,0000)"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/black"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_skittles" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/user_media_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="false"
                    android:background="#eeeeee"
                    android:cropToPadding="false"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_record_audio" />

                <TextView
                    android:id="@+id/days_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".4"
                    android:gravity="center_vertical"
                    android:text="46days ago"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/media_meta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <LinearLayout
                    android:id="@+id/user_encounters"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:orientation="vertical"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/num_user_encounters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#cccccc"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/title_user_encounters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/encounters"
                        android:textAllCaps="true"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_comments"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/num_user_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#cccccc"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/title_user_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/comments"
                        android:textAllCaps="true"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3" >

                    <ImageButton
                        android:id="@+id/btn_delete_story"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:layout_weight=".3"
                        android:adjustViewBounds="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_trash" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>