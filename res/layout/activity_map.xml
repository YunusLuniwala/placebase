<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal"
    tools:context=".MapActivity" >
    
    <fragment 
  		android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#333333"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnShowMyLocation"
        style="@style/AppTheme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:background="@drawable/btn_record_bg_false"
        android:cropToPadding="true"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_mylocation" />

    <RelativeLayout
        android:id="@+id/testDelete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" >

        <TextView
            android:id="@+id/testMyLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TestHasBearing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v7.widget.Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/bottomBar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btnRecordMain"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_record_main"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:scaleType="centerInside" />

    </LinearLayout>

</RelativeLayout>