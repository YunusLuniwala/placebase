<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTrace" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/story_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:text="@string/story_confirm" />

                <TextView
                    android:id="@+id/storyConfirmAddl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_toEndOf="@id/story_confirm"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:text="@string/story_confirm_addl" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3" >
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>