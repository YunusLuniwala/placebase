<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/markerTag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTrace" >

    <LinearLayout
        android:id="@+id/confirm_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight=".9" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/commentsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|center_horizontal"
                        android:text="@string/story_confirm"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:background="#33b5e5"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/storyConfirmAddl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:text="@string/story_confirm_addl"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3" >
                </RelativeLayout>

            </LinearLayout>

            <FrameLayout
                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="94dp"
                android:layout_marginTop="58dp" >

                <ImageView
                    android:id="@+id/bg_marker"
                    android:layout_width="match_parent"
                    android:layout_height="272dp"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bg_marker" />

            </FrameLayout>

        </RelativeLayout>
        
         <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="#bababa" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" >

                <ImageButton
                    android:id="@+id/btn_close_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:cropToPadding="true"
                    android:padding="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_close" />

                <ImageView
                    android:id="@+id/user_media_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progressbar_3" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>